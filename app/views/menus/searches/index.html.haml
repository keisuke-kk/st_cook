= form_with(url: category_menus_searches_path(@category.id), local: true, method: :get, class: "search-form") do |f|
  = f.text_field :keyword, placeholder: "メニューを検索する", class: "search-input", id: "keyword"
  = f.submit "検索", class: "search-btn"

- @menus.each do |menu|
  .content
  .content__left
    .content__left__image
  .content__right
    .content__right__top
      = link_to menu.title, category_menu_path(@category.id, menu.id), class: "content__right__top--title"
    .content__right__middle
      -# category:
    .content__right__bottom
      .content__right__bottom--userName
        = link_to menu.user.nickname, user_path(menu.user), class: "content__right__bottom--userName--btn"
      .content__right__bottom--date
        = menu.created_at

= paginate(@menus)